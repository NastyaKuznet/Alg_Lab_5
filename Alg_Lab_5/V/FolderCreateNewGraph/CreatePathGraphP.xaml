<Page x:Class="Alg_Lab_5.V.FolderCreateNewGraph.CreatePathGraphP"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Alg_Lab_5.V.FolderCreateNewGraph"
      mc:Ignorable="d" 
      d:DesignHeight="200" d:DesignWidth="400"
      Title="CreatePathGraphP">
    <Grid Background="White" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="TextPathGraph" Grid.Column="0" Grid.Row="1" Text="Путь папки с графом" Margin="10" VerticalAlignment="Bottom"/>
        <Border  Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="2" BorderBrush="Blue" BorderThickness="1" Margin="10">
            <TextBlock x:Name="NameGraph" Text="{Binding PathFolder}"/>
        </Border>
        <Button x:Name="ChoicePath" Grid.Column="1" Grid.Row="1" Margin="10" Content="Выбрать" Command="{Binding ChoiceFolder}"/>
    </Grid>
</Page>
